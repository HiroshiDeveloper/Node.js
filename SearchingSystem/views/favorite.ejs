<!DOCTYPE html>
<html>
  <head>
	  <title><%= title %></title>

	  <!-- CSS -->
	  <link rel='stylesheet' href='/stylesheets/style.css' />
       
	  <!-- bootstrap -->
	  <meta charset="utf-8">
	  <meta name="viewport" content="width=device-width, initial-scale=1">
	  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
	  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
	  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </head>
  <body>
	  <a href="/"><span class="glyphicon glyphicon-home">Home</span></a>

	  <h2>Favorite Places List</h2>
	  <% if (jsondata) { %>
		
		<div class="boxContainer">
			<% jsondata.forEach(function(onedata) { %>
					<div class="box">
						<form action="/favorite" method="post">
							<input type="hidden" name="dataId" value=<%= onedata._id %> >
							<button type="submit" class="delete btn btn-danger" onclick='return confirm("Are you sure to delete this favorite place?");'>X</button>
						</form>
						<img src="<%= onedata.photo %>"><br/>
						<img class="icon" src="<%= onedata.icon %>" width="30px" height="30px" >
						<label style="display:inline;"><%= onedata.name %></label>
						<h6><%= onedata.address %></h6>
						<% if(onedata.rating) {%>
							<h6>Rating: <%= onedata.rating %></h6>
						<% } %>
					</div>
			<% }); %>
		</div>
		</div>
	  <% }else{ %>
	  	<h2>Add favorite places</h2>
		<div class="textCenter">
			<a href="/">Go back</a>
		</div>
	  <% } %>



  </body>
  <script type="text/javascript">
	var data = <%- JSON.stringify(jsondata) %>
	for (i=0; i<data.length; i++){
		console.log(data[i]);
	};
  </script>
</html>


